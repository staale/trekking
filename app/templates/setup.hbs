<div class="jumbotron">
    <div class="container">
        <div class="row">
            <img src="bmk.gif" class="col-xs-3">
            <h1 class="col-xs-9">
                Loddtrekkning
            </h1>
            <h2 class="push-3 col-xs-9">Oppsett</h2>
        </div>

    </div>
</div>
<form role="form">
    <div class="container">
        <div class="row" style="font-size: x-large">
            <div class="col-md-6 col-xs-12">
                <h3>Farger</h3>
                <ul class="nav nav-pills">
                    {{#each item in colors}}
                        <li class="col-xs-6">
                            <a {{action toggle item.color}}>{{color-checker colorBinding="item.color" valuesBinding="model.colors"}} {{item.color.name}}</a>
                        </li>
                    {{/each}}
                </ul>
            </div>
            <div class="col-md-6 col-xs-12">
                <h3>Verdier</h3>

                <div class="form-group">
                    <label>Minimums verdi:</label>
                    {{input valueBinding="model.min" class="form-control"}}
                </div>
                <div class="form-group">
                    <label>Maximums verdi:</label>
                    {{input valueBinding="model.max" class="form-control"}}
                </div>
            </div>
        </div>
        <ul class="pager">
            <li class="next"><a {{action start}}>Start &rarr;</a></li>
        </ul>
    </div>
</form>
